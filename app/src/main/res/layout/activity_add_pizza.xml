<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select toppings"
            android:background="@color/blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cheeseCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese"/>
        <CheckBox
            android:id="@+id/mushroomsCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mushrooms"/>
        <CheckBox
            android:id="@+id/baconCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacon"/>
        <CheckBox
            android:id="@+id/onionCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onion"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/olivesCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olives"/>
        <CheckBox
            android:id="@+id/chickenCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken"/>
        <CheckBox
            android:id="@+id/tomatoCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato"/>
        <CheckBox
            android:id="@+id/hamCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ham"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <RadioGroup
            android:id="@+id/radiobrnGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/wholerb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whole"/>
            <TextView
                android:id="@+id/wholeTf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/leftrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lefi half"/>
            <TextView
                android:id="@+id/leftTf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rightrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right half"/>
            <TextView
                android:id="@+id/rightTf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza size:" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pizzaSizeEt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza crust:" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pizzaCrustEt"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_weight="2"
        >
        <Button
            android:id="@+id/addToChartBtn"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="130dp"
            android:text="Add to chart"
            />
        <Button
            android:id="@+id/cancelOrderBtn"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="130dp"
            android:text="Cancel order"
            />
    </LinearLayout>



</LinearLayout>